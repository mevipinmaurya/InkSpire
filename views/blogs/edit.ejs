<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="mt-3 mb-3">Edit your blog</h3><br>
            <form method="post" action="/blogs/<%= blogs._id %>?_method=PUT" class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="blog[title]" class="form-control" value="<%= blogs.title %>" required>
                    <div class="invalid-feedback">Enter a valid title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Content</label>
                    <textarea name="blog[content]" id="content" cols="30" rows="10" class="form-control"
                        required><%= blogs.content %></textarea>
                    <div class="invalid-feedback">Please enter a Content</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL/Link</label>
                    <input type="text" name="blog[image]" class="form-control" value="<%= blogs.image %>">
                </div>
                <div class="mb-3">
                    <button class="btn btn-dark my-btn">Update</button>
                </div>
            </form>
        </div>
    </div>